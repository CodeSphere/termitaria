<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!--
  ===========================================================================
  ============================= TIME SHEET ==================================
  ===========================================================================
  ======================== RECORD SESSION==========================================
 -->
 <hibernate-mapping auto-import="true" default-lazy="false">
 	
 	<class name="ro.cs.ts.entity.RecordSession" entity-name="RecordSession" table="recordsession">
 		<id name="recordSessionId" column="RECORDSESSIONID">
			<generator class="native" />
		</id>
		<property name="recordId" column="RECORDID"/>
		<property name="sessionId" column="SESSIONID"/>
	</class>
	
	<class name="ro.cs.ts.entity.RecordSession" entity-name="RecordSessionForUpdate" table="recordsession">
 		<id name="recordSessionId" column="RECORDSESSIONID">
			<generator class="native" />
		</id>
		<property name="recordId" column="RECORDID"/>
		<property name="sessionId" column="SESSIONID"/>
	</class>
	
	 <class name="ro.cs.ts.entity.RecordSession" entity-name="RecordSessionSimple" table="recordsession">
 		<id name="recordSessionId" column="RECORDSESSIONID">
			<generator class="native" />
		</id>
		<property name="recordId" column="RECORDID"/>
		<property name="sessionId" column="SESSIONID"/>
	</class>
	
	 <class name="ro.cs.ts.entity.RecordSession" entity-name="RecordSessionForListing" table="recordSession">
		<id name="recordSessionId" column="RECORDSESSIONID">
			<generator class="native" />
		</id>
		<property name="recordId" column="RECORDID"/>
		<property name="sessionId" column="SESSIONID"/>
	</class>		
	
	 
	
</hibernate-mapping>
